<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SelectActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/character_00"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:onClick="setMember"
                android:scaleType="fitCenter"
                android:src="@drawable/locked"
                android:tag="0"
                app:layout_constraintEnd_toStartOf="@+id/character_01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/character_01" />

            <ImageView
                android:id="@+id/character_01"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:onClick="setMember"
                android:scaleType="fitCenter"
                android:src="@drawable/locked"
                android:tag="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/character_02"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:onClick="setMember"
                android:scaleType="fitCenter"
                android:src="@drawable/locked"
                android:tag="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/character_01"
                app:layout_constraintTop_toTopOf="@+id/character_01" />

            <ImageView
                android:id="@+id/character_03"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginTop="16dp"
                android:onClick="setMember"
                android:scaleType="fitCenter"
                android:src="@drawable/locked"
                android:tag="3"
                app:layout_constraintEnd_toStartOf="@+id/character_04"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/character_00" />

            <ImageView
                android:id="@+id/character_04"
                android:tag="4"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:onClick="setMember"
                android:scaleType="fitCenter"
                android:src="@drawable/locked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/character_03" />

            <ImageView
                android:id="@+id/character_05"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:onClick="setMember"
                android:scaleType="fitCenter"
                android:src="@drawable/locked"
                android:tag="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/character_04"
                app:layout_constraintTop_toTopOf="@+id/character_03" />

            <ImageView
                android:id="@+id/character_06"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginTop="16dp"
                android:onClick="setMember"
                android:scaleType="fitCenter"
                android:src="@drawable/locked"
                android:tag="6"
                app:layout_constraintEnd_toStartOf="@+id/character_07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/character_03" />

            <ImageView
                android:id="@+id/character_07"
                android:tag="7"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:onClick="setMember"
                android:scaleType="fitCenter"
                android:src="@drawable/locked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/character_06" />

            <ImageView
                android:id="@+id/character_08"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:onClick="setMember"
                android:scaleType="fitCenter"
                android:src="@drawable/locked"
                android:tag="8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/character_07"
                app:layout_constraintTop_toTopOf="@+id/character_06" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>